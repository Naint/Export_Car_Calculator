<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.Korea.KoreaCalculatorFragment"
    android:background="@color/mainBackground">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Расчёт авто из Кореи"
        android:fontFamily="@font/days_one"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView">


        <EditText
            android:id="@+id/carVonPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Стоимость авто в вонах"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:fontFamily="@font/days_one" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <RadioButton
                android:id="@+id/lessThreeRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/days_one"
                android:text="Младше 3 лет" />

            <RadioButton
                android:id="@+id/threeFromFiveRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="От 3 до 5 лет"
                android:fontFamily="@font/days_one"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/fiveFromSevenRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/days_one"
                android:text="От 5 до 7 лет" />
            <RadioButton
                android:id="@+id/moreSevenRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/days_one"
                android:text="Старше 7 лет" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Физ. лицо"
                android:background="@drawable/radio_selector_calc_face"
                android:textColor="@drawable/text_color_calc_face"
                />
            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Юр. лицо"
                android:textColor="@drawable/text_color_calc_face"
                android:background="@drawable/radio_selector_calc_face"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/engineCapacityED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Объём двигателя"
            android:inputType="number"
            android:fontFamily="@font/days_one"
            android:textColorHint="@color/white"
            />
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:backgroundTint="#008000"
            android:textColor="@color/white"
            android:fontFamily="@font/days_one"
            android:text="Раcсчитать"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>